<%provide(:title,  @user.name ) %>
<div class="row">
  <aside class="col-md-4"
  <section class="user-info">
<%= @user.name %>,
<%= @user.email %>,
<%= @user.activated ? "activated" : "NACTIVATED" %>

  <h3>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h3>
<div class = "col-md-8">
  <% if @user.microposts.any? %>
   <h3> microposts (<%= @user.microposts.count %>) </h3>
  <ol class = "microposts">
    <%= render @microposts %>
  </ol>
  <%= will_paginate @microposts %>
  <% end %>
</div>

</section>
</aside>
</div>
